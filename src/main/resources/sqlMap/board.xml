<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.dao.BoardMapper">
    <insert id="boardWrite" parameterType="com.naver.domain.dto.BoardDto">
        insert into board(title, content, user_seq) values(#{title},#{content},#{user_seq});
    </insert>

    <select id="boardList" resultType="com.naver.domain.dto.MyBoardDto">
        select u.user_seq, b.board_seq, b.title, b.content from user u
        join board b
        on b.user_seq = u.user_seq
    </select>


    <select id="boardView" resultType="com.naver.domain.dto.BoardDto" parameterType="int">
        select * from board where board_seq=#{board_seq};
    </select>


    <update id="boardUpdate" parameterType="com.naver.domain.dto.BoardDto">
        update board set title=#{title}, content=#{content}
        where board_seq=#{board_seq} and user_seq = #{user_seq};
    </update>

    <delete id="boardDelete" parameterType="int">
        delete from board where board_seq = #{bored_seq};
    </delete>

    <insert id="insertComment" parameterType="com.naver.domain.dto.InsertCommentDto">
        insert into comment(user_seq, board_seq, content) values(#{user_seq},#{board_seq},#{content});
    </insert>

    <select id="viewComment" resultType="com.naver.domain.entity.Comment" parameterType="com.naver.domain.dto.MyCommentDto">
        select * from comment where board_seq = #{board_seq} and user_seq =#{user_seq};
    </select>
</mapper>