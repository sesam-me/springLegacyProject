<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.dao.ProductMapper">

<!--  ## PRODUCT ## -->
    <insert id="addProduct" parameterType="com.naver.domain.dto.ProductDto">
        insert into product(name, price, count) values(#{name}, #{price}, #{count});
    </insert>

    <select id="searchProduct" resultType="com.naver.domain.entity.Product">
        select * from product;
    </select>



    <update id="updateProduct" parameterType="com.naver.domain.entity.Product">
        update product set name = #{name}, price = #{price}, count = #{count} where product_seq = #{product_seq};
    </update>
<!-- update화면 들어가서 입력되어 있는 값 보여주는 쿼리-->
    <select id="findByProductSeq" resultType="com.naver.domain.entity.Product" parameterType="int">
        select * from product where product_seq=#{product_seq};
    </select>


    <delete id="deleteProduct" parameterType="int" >
        delete from product where product_seq=#{product_seq};
    </delete>

<!--  ## CART ##  -->
    <select id="searchCart">

    </select>

    <insert id="addCart" parameterType="com.naver.domain.dto.AddCartDto">
        insert cart(user_seq,product_seq) values(#{user_seq}, #{product_seq});
    </insert>
</mapper>